<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bunker.bunkermate.a0003">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="30dp" >

        <LinearLayout>
            <TextView
                android:id="@+id/textView1"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="Name"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.WindowTitle" />

            <EditText
                android:id="@+id/editText1"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:ems="15"
                android:fontFamily="sans-serif-condensed"
                android:inputType="textPersonName"
                android:textAppearance="@android:style/TextAppearance.Material.Small.Inverse"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Year"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.WindowTitle" />

            <EditText
                android:id="@+id/editText2"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:ems="15"
                android:fontFamily="monospace"
                android:inputType="number"
                android:textAppearance="@android:style/TextAppearance.Material.Small.Inverse"
                android:textSize="15sp" />

        </LinearLayout>
    </GridLayout>

</android.support.constraint.ConstraintLayout>